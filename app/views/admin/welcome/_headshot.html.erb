<div class="d-flex">
  <h2 class="flex-1">Artist photo</h2>

  <% if headshot.present? %>
    <%= form_tag admin_headshots_path, method: :delete do |form| %>
      <button type="submit" class="btn btn-danger">
        <%= octicon "trash", style: "margin-top:1px;" %> Delete
      </button>
    <% end %>
  <% end %>
</div>

<% if headshot.present? %>
  <div class="my-3">
    <%= image_tag rails_blob_url(headshot.blob), style: "max-width: 100%; display: block;" %>
  </div>
<% else %>
  <%= form_with url: admin_headshots_path, method: :post, accept: ".jpeg", multipart: true do |form| %>
    <div class="form-group">
      <div class="form-group-body">
        <%= form.file_field :headshot, class: "" %>
      </div>
    </div>
    <div class="form-group">
      <div class="form-group-body">
        <%= form.submit "Upload", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
<% end %>
